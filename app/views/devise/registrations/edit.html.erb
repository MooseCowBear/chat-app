<div class="flex flex-col gap-3">
  <h2 class="text-2xl font-bold uppercase tracking-widest">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "flex flex-col gap-3 p-5 bg-gray-50 rounded-md border-2 shadow-sm" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: "uppercase tracking-wider" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "px-3 py-1 rounded border border-gray-800" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :username, class: "uppercase tracking-wider" %><br />
      <%= f.text_field :username, autofocus: true, class: "px-3 py-1 rounded border border-gray-800" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "uppercase tracking-wider" %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "px-3 py-1 rounded border border-gray-800" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "uppercase tracking-wider" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "px-3 py-1 rounded border border-gray-800" %>
    </div>

    <div class="field">
      <%= f.label :current_password, class: "uppercase tracking-wider" %> <p><i>(we need your current password to confirm your changes)</i></p>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "px-3 py-1 rounded border border-gray-800" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "cursor-pointer w-full rounded border-2 border-gray-800 bg-gray-800 text-gray-50 lowercase tracking-widest py-1 hover:bg-gray-50 hover:text-gray-800" %>
    </div>
  <% end %>

  <div class="flex justify-between items-center">
    <span>
      Unhappy? 
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>
    </span>

    <%= link_to "Back", :back, class: "uppercase tracking-wider self-center" %>
  </div>
</div>