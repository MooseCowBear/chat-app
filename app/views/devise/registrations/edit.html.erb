<div class="flex flex-col gap-3"> 
  <h2 class="text-2xl font-bold uppercase tracking-widest">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, 
    as: resource_name, 
    url: registration_path(resource_name), 
    html: { method: :put, class: "flex flex-col gap-3 p-5 bg-gray-50 rounded-md border-2 shadow-sm dark:bg-[#212C31] dark:border-gray-600" }) do |f| %>

    <div class="field">
      <%= f.label :email, class: "uppercase tracking-wider" %>
      <% f.object.errors.full_messages_for(:email).each do |msg| %>
        <span class="text-coolpink-500 dark:text-melon-500"><%= msg %></span>
      <% end %>
      <%= f.email_field :email, 
        autofocus: true, 
        autocomplete: "email", 
        class: "px-3 py-1 rounded border border-gray-800 w-full dark:bg-[#263238] dark:border-gray-500" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :username, class: "uppercase tracking-wider" %>
      <% f.object.errors.full_messages_for(:username).each do |msg| %>
        <span class="text-coolpink-500 dark:text-melon-500"><%= msg %></span>
      <% end %>
      <%= f.text_field :username, 
        autofocus: true, 
        class: "px-3 py-1 rounded border border-gray-800 w-full dark:bg-[#263238] dark:border-gray-500" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "uppercase tracking-wider" %> 
        <i>(leave blank if you don't want to change it)</i>
      <% f.object.errors.full_messages_for(:password).each do |msg| %>
        <span class="text-coolpink-500 dark:text-melon-500"><%= msg %></span>
      <% end %>
      <%= f.password_field :password, 
        autocomplete: "new-password", 
        class: "px-3 py-1 rounded border border-gray-800 w-full dark:bg-[#263238] dark:border-gray-500" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "uppercase tracking-wider" %>
      <% f.object.errors.full_messages_for(:password_confirmation).each do |msg| %>
        <span class="text-coolpink-500 dark:text-melon-500"><%= msg %></span>
      <% end %>
      <%= f.password_field :password_confirmation, 
        autocomplete: "new-password", 
        class: "px-3 py-1 rounded border border-gray-800 w-full dark:bg-[#263238] dark:border-gray-500" %>
    </div>

    <div class="field">
      <%= f.label :current_password, 
        class: "uppercase tracking-wider" %> 
        <p><i>(we need your current password to confirm your changes)</i></p>
      <% f.object.errors.full_messages_for(:current_password).each do |msg| %>
        <span class="text-coolpink-500 dark:text-melon-500"><%= msg %></span>
      <% end %>
      <%= f.password_field :current_password, 
        autocomplete: "current-password", 
        class: "px-3 py-1 rounded border border-gray-800 w-full dark:bg-[#263238] dark:border-gray-500" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", 
        class: "cursor-pointer w-full rounded border-2 border-gray-800 bg-gray-800 dark:border-gray-500 dark:bg-[#263238] text-gray-50 lowercase tracking-widest py-1 hover:bg-gray-50 hover:text-gray-800 dark:hover:bg-gray-50/80" %>
    </div>
  <% end %>

  <div class="flex justify-between items-center">
    <span>
      Unhappy? 
      <%= button_to "Cancel my account", 
        registration_path(resource_name), 
        data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, 
        method: :delete %>
    </span>

    <%= link_to "Back", :back, class: "uppercase tracking-wider self-center" %>
  </div>
</div>