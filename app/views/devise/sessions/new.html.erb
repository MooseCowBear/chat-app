<div class="flex flex-col gap-3">
  <h2 class="text-2xl font-bold uppercase tracking-widest">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "flex flex-col gap-3 p-5 bg-gray-50 rounded-md border-2 shadow-sm" }) do |f| %>
    <div class="field">
      <%= f.label :email, class: "uppercase tracking-wider" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "px-3 py-1 rounded border border-gray-800 w-full" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "uppercase tracking-wider" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "px-3 py-1 rounded border border-gray-800 w-full" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "cursor-pointer w-full rounded border-2 border-gray-800 bg-gray-800 text-gray-50 lowercase tracking-widest py-1 hover:bg-gray-50 hover:text-gray-800" %>
    </div>
  <% end %>

  <div class="self-center text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>